{% extends 'base.html.twig' %}

{% block title %}Hello QuizController!{% endblock %}

{% block main %}
    <section>
        <h1>Liste des quiz</h1>
        <ul class="row">
            {% for quiz in quizzes %}
                <li class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="card-title">{{quiz.title}}</h2>
                            <p class="card-text">{{quiz.description}}</p>
                            <a href="{{ path('quiz_single', { id: quiz.id }) }}" class="btn btn-primary">En voir plus</a>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}