{% extends 'base.html.twig' %}

{% block main %}
	<h1 class="mb-4">Modifier une question</h1>
	{{ form(form) }}

		<h2 class="mb-4">Listes des réponses</h2>

		<form action="{{path('answer_edit', {id: question.id} )}}" method="post">
			<ul class="list-group mb-4">
				{% for answer in question.answers %}
					<li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
						<div class="form-check">
							<input class="form-check-input" type="radio" name="rightAnswer" value="{{ answer.id }}" {% if question.rightAnswer.id == answer.id %} checked {% endif %}>
						</div>
						<input name="text_{{answer.id}}" type="text" class="form-control flex-grow-1" placeholder="Texte de la réponse" value="{{ answer.text }}"/>

						<a href="{{ path('answer_delete', {id: answer.id} ) }}" class="btn btn-danger btn-sm">Supprimer</a>
					</li>
				{% endfor %}

			</ul>
			<button type="submit" class="btn btn-primary btn-sm">Valider</button>
		</form>

	{% endblock %}
