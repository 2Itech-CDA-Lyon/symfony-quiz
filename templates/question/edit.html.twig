{% extends 'base.html.twig' %}

{% block main %}
    <h1 class="mb-4">Modifier une question</h1>
    <form method="post mb-4">
        <div class="mb-3 row">
            <label for="text" class="col-sm-2 col-form-label">Texte</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="text" name="text" value="{{ question.text }}" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Valider les modifications</button>
    </form>
    <form class="mb-4" method="post">
        <button type="submit" class="btn btn-danger">Supprimer cette question</button>
    </form>

    <h2 class="mb-4">Listes des réponses</h2>

    <form>
        <ul class="list-group mb-4">
        {% for answer in question.answers %}
            <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="rightAnswer" value="{{ answer.id }}" {% if question.rightAnswer.id == answer.id %} checked {% endif %}>
                </div>
                <input type="text" class="form-control flex-grow-1" placeholder="Text de la réponse" value="{{ answer.text }}" />
                <button type="submit" class="btn btn-primary btn-sm">Valider</button>
                <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
            </li>
        {% endfor %}
        </ul>
    </form>
{% endblock %}
